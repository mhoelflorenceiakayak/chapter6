<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Dashboard</title>
    <style>
        .myButton {
            background-color:#44c767;
            border-radius:42px;
            display:inline-block;
            cursor:pointer;
            color:#ffffff;
            font-family:Arial;
            font-size:14px;
            padding:6px 25px;
            text-decoration:none;
            text-shadow:0px 1px 0px #2f6627;
            margin-bottom: 10px;
        }
        .myButton:hover {
            background-color:#5cbf2a;
        }
        .myButton:active {
            position:relative;
            top:1px;
        }
        
    </style>
</head>
<body>
    <a href="/add/user" class="myButton">Tambah User</a>
<table border="1">
    <tr>
        <th>Nomor</th>
        <th>Username</th>
        <th>Country</th>
    </tr>
    <% let nomor=1; %>
    <% ponsel.forEach(i=> { %>
    <tr>
            <td>
                <%= nomor %>
            </td>
            <td>
                <%= i.username%>
            </td>
            <td>
                <%= i.country%>
            </td>
            <td>
                <a href="/ponsel/detail/<%= i.id %>">Detail</a> | <a href="/ponsel/update/<%= i.id %>">Update</a> | <a href="/ponsel/delete/<%= i.id %>">Delete</a>
            </td>
    </tr>
    <% nomor++ %>
    <% }) %>
</table>
</body>
</html>